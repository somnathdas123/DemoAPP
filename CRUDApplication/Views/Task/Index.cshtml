
@{
    ViewBag.Title = "Index";
}

<button type="button" class="btn btn-primary margin-top-20" data-toggle="modal" data-target="#myModal" onclick="ShowTaskPopup();">Add New Task</button><br /><br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                TaskID
            </th>
            <th>
               Task Name
            </th>
            <th>
                Priority
            </th>
            <th>
                Task Date
            </th>
            <th>
                Estimated Cost
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody class="tbody"></tbody>
</table>


<div class="modal fade" id="AddTaskPopup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="PopupLabel">Add Task</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group hidden">
                        <label for="EmployeeId">ID</label>
                        <input type="text" class="form-control" id="TaskId" placeholder="TaskId" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Task Name</label>
                        <input type="text" class="form-control" id="TaskName" placeholder="Task Name" />
                    </div>
                    <div class="form-group">
                        <label for="Age">Priority</label>
                        <select class="form-control" id="Priority">
                            <option>p1</option>
                            <option>p2</option>
                            <option>p3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="State">TaskDate</label>
                        <input type="text" class="form-control" id="TaskDate" placeholder="TaskDate" />
                    </div>
                    <div class="form-group">
                        <label for="Country">EstimatedCost</label>
                        <input type="text" class="form-control" id="EstimatedCost" placeholder="Estimated Cost" />
                    </div>
                    <div class="form-group">
                        <label for="Country">Description</label>
                        <input type="text" class="form-control" id="Description" placeholder="Description" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Page Level -->
<script src="/Scripts/Custom/task.js"></script>


